# Include metadata files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include SECURITY.md
include pyproject.toml
include .bumpversion.cfg

# Include configuration files
include tox.ini
include Makefile
include .pre-commit-config.yaml
include requirements-dev.txt

# Include source code
recursive-include src *.py
recursive-include src *.pyi

# Include tests
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.txt
recursive-include tests *.yml
recursive-include tests *.yaml

# Include documentation
recursive-include docs *.rst
recursive-include docs *.md
recursive-include docs *.py
recursive-include docs *.txt
recursive-include docs *.yml
recursive-include docs *.yaml
recursive-include docs *.png
recursive-include docs *.jpg
recursive-include docs *.svg
include docs/Makefile

# Include GitHub configuration
recursive-include .github *.yml
recursive-include .github *.yaml
recursive-include .github *.md

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .tox
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude htmlcov
global-exclude .coverage
global-exclude *.egg-info
global-exclude build
global-exclude dist
global-exclude .DS_Store
global-exclude Thumbs.db

# Exclude IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo

# Exclude temporary files
global-exclude *.tmp
global-exclude *.temp
global-exclude temp
global-exclude tmp

# Exclude test artifacts
global-exclude test-results
global-exclude benchmark-results
global-exclude *.json.gz
global-exclude bandit-report.json
global-exclude safety-report.json
